<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="COURT.PainAuRaisin"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:COURT"
    Shell.FlyoutBehavior="Disabled"
    Title="PainAuRaisin">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="La meilleur vienoiserie"
                
                FontSize="40"
                HorizontalOptions="Start" 
                SemanticProperties.HeadingLevel="Level1"/>

            <Label
                Text="Si vous êtes ici c'est que vous êtes une bonne personne"

                FontSize="20"
                HorizontalOptions="Start"
                SemanticProperties.HeadingLevel="Level2"/>

            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
