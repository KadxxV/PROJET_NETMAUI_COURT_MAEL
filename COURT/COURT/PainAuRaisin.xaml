<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="COURT.PainAuRaisin"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:COURT"
    Shell.FlyoutBehavior="Disabled"
    Title="PainAuRaisin">

    <ScrollView>
        <VerticalStackLayout>


            <Label
                Text="La meilleur vienoiserie"
                
                FontSize="40"
                HorizontalOptions="Start" 
                SemanticProperties.HeadingLevel="Level1"/>

            <Label
                Text="Si vous êtes ici c'est que vous êtes une bonne personne"

                FontSize="20"
                HorizontalOptions="Start"
                SemanticProperties.HeadingLevel="Level2"/>

            

            <StackLayout Orientation="Horizontal">
                <Image Source="painauxraisins.png" WidthRequest="100" HeightRequest="100" />
                <Image Source="painraisin.PNG" WidthRequest="100" HeightRequest="100" />
            </StackLayout>

            <Button
                Text="Jean François"
                Clicked="OnButtonClicked"
            />

            <StackLayout>
                <WebView x:Name="webView" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
