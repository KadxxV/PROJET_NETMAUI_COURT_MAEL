<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="COURT.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:COURT"
    Shell.FlyoutBehavior="Disabled"
    Title="COURT">

    <TabBar Shell.TabBarUnselectedColor="Black">

        <Tab Title="PainAuRaisin"
            Icon="painauxraisins.png">
            <ShellContent ContentTemplate="{DataTemplate local:PainAuRaisin}" />
        </Tab>
        <Tab Title="PainAuChocolat"
            Icon="painauchocolat.png">
            <ShellContent ContentTemplate="{DataTemplate local:PainAuChocolat}" />
        </Tab>
        <Tab Title="Croissant"
            Icon="croissant.png">
            <ShellContent ContentTemplate="{DataTemplate local:Croissant}" />
        </Tab>
        <Tab Title="Baguette"
            Icon="baguette.png">
            <ShellContent ContentTemplate="{DataTemplate local:Baguette}" />
        </Tab>
    </TabBar>

</Shell>
